# Aliases
alias gnp="g --no-pager"
alias dkr="docker"
alias dc="docker-compose"
alias reload="source ~/.zshrc"
alias pa="powershell.exe Start-Process powershell -Verb runAs"
alias v="vagrant"
alias clip="xsel -ib"
alias tree="tree -C"
alias diff="diff --color"
alias gtop='docker run --rm -it --name gtop --net="host" --pid="host" aksakalli/gtop'
alias azd='docker run -v ${HOME}:/root -t --rm mcr.microsoft.com/azure-cli az'

alias large='gsettings set org.gnome.desktop.interface text-scaling-factor 1.25' 
alias nolarge='gsettings set org.gnome.desktop.interface text-scaling-factor 1' 


# MacOS conditionals
if [[ $(uname -s) == Darwin ]]
then
    alias ls="ls -G"
else
    alias ls="ls --color=always"
fi
